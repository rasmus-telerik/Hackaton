@model IEnumerable<WebApplication.Engine.Model.Task>

@{
    ViewBag.Title = "All";
}

@section scripts{
<script>
    var addLocationKendoWindow;
    $(document).ready(function () {
        addLocationKendoWindow = $("#addLocationWindow").kendoWindow({
            width: "500px",
            title: "Add new location",
            actions: [
                "Close"
            ]
        }).data("kendoWindow");

        $("#addLocationLink").click(function () {
            addLocationKendoWindow.open();
            addLocationKendoWindow.center();
        });
    });
</script>
}

<div id="addLocationWindow" style="display: none;">
    <form>
        <label for="customer">CUSTOMER</label>
        <input id="customer" type="text" style="width: 90%" />
        <label for="visit">VISIT</label>
        <textarea id="visit" rows="3" style="width: 90%">
        </textarea>
        <label for="address">ADDRESS</label>
        <textarea id="address" rows="3" style="width: 90%">
        </textarea>
        <input type="submit" value="Add location">
        <button onclick="addLocationKendoWindow.close();">Cancel</button>
    </form>
</div>

<div class="page-header">
    <h1>Locations</h1>
    <a href="">Plan routes</a>
</div>

<a id="addLocationLink"><img src="" /> Add location</a>

<table>
    <tr>
        <td>VISIT DESCRIPTION</td>
        <td>ADDRESS</td>
        <td>CONTACT</td>
        <td>VISIT TIME</td>
    </tr>
    @{
        foreach (var task in Model)
        {
        <tbody>
            <tr>
                <td>@task.Description</td>
                <td>@task.Location.Latitude &nbsp; @task.Location.Longitude</td>
                <td>@task.Customer</td>
                <td>@task.TimeInMins minutes</td>
            </tr>
        </tbody>
        }
    }
</table>