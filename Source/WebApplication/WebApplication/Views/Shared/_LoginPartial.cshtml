@if (Request.IsAuthenticated)
{
    <nav>
        <ul id="menu">
            <li><a class="menu-items" href="~/Archives/All">Archives</a></li>
            <li><a class="menu-items" href="~/Workers/All">Employess</a></li>
            <li><a class="menu-items" href="~/RouteDispatch/All">Routes</a></li>
            <li><a class="menu-items" href="~/Locations/All">Locations</a></li>
        </ul>
    </nav>
    <text>
    @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "menu-items", title = "Manage" })
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a class="menu-items" href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
        }
    </text>
}
else
{
    <ul>
        <li>@Html.ActionLink("Try now", "Register", "Account", routeValues: null, htmlAttributes: new { @class="blue-button" })</li>
        <li>@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { @class="menu-items" })</li>
    </ul>
}
